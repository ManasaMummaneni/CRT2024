Positive numbere or negative number or zero
#include <stdio.h>
#include<math.h>

int main()
{
   int a;
   scanf("%d",&a);
   if(a>0)
   {
       printf("%d is a positive number",a);
   }
   else
   if(a<0)
   {
       printf("%d is a negative number",a);
   }
   else
   printf("It is zero");
    return 0;
}
